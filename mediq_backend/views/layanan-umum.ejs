<!DOCTYPE html>
<html>
<head>
    <title>Layanan Umum</title>
    <style>
        .doctor-info {
            line-height: 0.5;
        }
    </style>
</head>
<body>
    <h1>Layanan Umum</h1>
    <% if (doctors.length > 0) { %>
        <% doctors.forEach(function(doctor) { %>
            <div class="doctor-info">
                <h2><%= doctor.name %></h2>
                <p>Bidang: <%= doctor.bidang %></p>
                <p>Pengalaman: <%= doctor.experience %> tahun</p>
                <p>Harga: <%= doctor.price %></p>
                <p>Rating: <%= doctor.rating %></p>
                <p><a href="/konsultasi-kesehatan/layanan-umum/<%= encodeURIComponent(doctor.id) %>"> Lihat jadwal</a></p>
            </div>
        <% }); %>
    <% } else { %>
        <p>Belum ada dokter umum yang tersedia.</p>
    <% } %>
</body>
</html>
